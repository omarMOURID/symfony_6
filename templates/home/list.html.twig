{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-sm">
        <div class="row mt-3">
            {% for message in app.session.flashbag.get('success') %}
                <div class="alert alert-success" role="alert">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.session.flashbag.get('error') %}
                <div class="alert alert-success" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
        <div class="row mt-5">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Email</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for personne in personnes %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ personne.nom }}</td>
                    <td>{{ personne.prenom }}</td>
                    <td>{{ personne.email }}</td>
                    <td>
                        <div class="col">
                            <a type="button" class="btn btn-success" href="{{ path('app_home.home', {id: personne.id}) }}">modifier</a>
                            <a type="button" class="btn btn-danger" href="{{ path('app_home.delete', {id: personne.id}) }}">supprimer</a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col">
                <a type="button" class="btn btn-primary" href="{{ path('app_home.home') }}">Add</a>
            </div>
        </div>
    </div>
{% endblock %}